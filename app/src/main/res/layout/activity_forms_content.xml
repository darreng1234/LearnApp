<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context= "com.something.learnapp.Forms.FormsContent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-80dp"
                app:srcCompat="@drawable/formimageone" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/formimagetwo"
                android:layout_marginTop="-122dp"
                android:layout_marginLeft="-8dp" />

            <Button
                android:id="@+id/something_one_btn"
                style="@style/MyButtonStyle"
                android:layout_marginTop="-25dp"

                android:text="Try it For Yourself..." />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-45dp"
                app:srcCompat="@drawable/formimagethree" />


            <Button
                android:id="@+id/something_two_btn"
                style="@style/MyButtonStyle"
                android:layout_marginTop="-25dp"
                android:text="Try it For Yourself..." />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/formimagefour"
                android:layout_marginTop="-75dp"
                />

            <Button
                android:id="@+id/something_three_btn"
                style="@style/MyButtonStyle"
                android:layout_marginTop="-80dp"
                android:defaultFocusHighlightEnabled="true"
                android:text="Try it For Yourself..." />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/finaloneforms"
                android:layout_marginTop="-85dp"
                android:padding="10dp"
                />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/finaltwoforms"
                android:layout_marginTop="-150dp"
                android:padding="10dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/finalthreeforms"
                android:layout_marginTop="-150dp"
                android:padding="10dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/finalfourforms"
                android:layout_marginTop="-150dp"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/form_back_btn"
                style="@style/BackButtonStyle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-50dp" />


        </LinearLayout>





    </ScrollView>



</RelativeLayout>
